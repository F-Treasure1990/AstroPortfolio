---
import AndSymbol from "@components/Atoms/Icons/AndSymbol.astro";
import Paragraphlayout from "@layouts/ParagraphLayout.astro";
import Button from "@components/Atoms/Button/Button";
---

<section class="landing-text">
  <p class="landing-text__intro-text">Hi, my name is</p>
  <div class="landing-text__name">
    Fenton <span class="landing-text__name-highlight">Treasure</span>
  </div>
  <div class="landing-text__subheading">
    <AndSymbol />
    <p class="landing-text__subheading-text">
      I Develop for the <br />
      <span>Web</span>
    </p>
  </div>
  <div class="landing-text__paragraph">
    <Paragraphlayout>
      My focus as a self-taught developer is on building and designing
      exceptional web experiences. I am currently seeking opportunities to
      continue my growth and development üëåüèΩ.
    </Paragraphlayout>
  </div>
  <div class="landing-text__buttons">
    <Button label="download CV" variant="solid" flashMessage client:load />
    <a href="mailto:fentoncodes@gmail.com">
      <Button variant="border" label="message" />
    </a>
  </div>
</section>

<style lang="scss">
  @use "@styles/abstracts" as *;

  .landing-text {
    display: flex;
    flex-direction: column;
    z-index: 20;
    position: relative;

    &__intro-text {
      font-family: "Cabin";
      font-weight: 200;
      font-size: 48px;
      line-height: 48px;
      color: var(--c-highlight);
      margin-bottom: 12px;
      transition: font-size ease 0.3s, line-height ease 0.3s;
      @include breakpoint-down(medium) {
        font-size: 40px;
        line-height: 32px;
        margin-bottom: 8px;
      }
      @include breakpoint-down(x-small) {
        font-size: 28px;
        line-height: 18px;
      }
    }
    &__name {
      font-size: 80px;
      line-height: 80px;
      color: var(--c-f-white);
      font-weight: 700;
      margin-bottom: 4px;
      transition: font-size ease 0.3s, line-height ease 0.3s;
      @include breakpoint-down(medium) {
        font-size: 68px;
        line-height: 60px;
        margin-bottom: 12px;
        margin-top: 8px;
      }
      @include breakpoint-down(x-small) {
        font-size: 56px;
        line-height: 54px;
      }

      &-highlight {
        color: transparent;
        -webkit-text-fill-color: transparent;
        background: -webkit-linear-gradient(
          160deg,
          var(--c-accent) 28%,
          var(--c-accent-l-30) 100%
        );
        -webkit-background-clip: text;
      }
    }

    &__subheading {
      font-size: 54px;
      color: var(--c-f-white);
      font-weight: 700;
      display: flex;
      align-items: center;
      transition: font-size ease 0.3s, line-height ease 0.3s,
        margin-left ease 0.3s;
      @include breakpoint-down(medium) {
        font-size: 40px;
      }
      @include breakpoint-down(x-small) {
        font-size: clamp(1.75rem, calc(0.52rem + 6.15vw), 2.25rem);
      }

      &-text {
        line-height: 54px;
        margin-left: -20px;
        margin-top: -4px;
        @include breakpoint-down(medium) {
          line-height: 40px;
          margin-left: -16px;
        }
        @include breakpoint-down(x-small) {
          line-height: 34px;
          margin-left: -12px;
        }
        & > span {
          margin-left: 32px;
          @include breakpoint-down(medium) {
            margin-left: 24px;
          }
          @include breakpoint-down(x-small) {
            margin-left: 20px;
          }
        }
      }
    }

    &__paragraph {
      max-width: 508px;
      margin: 24px 0;
      z-index: 5;
      @include breakpoint-down(medium) {
        margin: 24px 0px;
      }
      @include breakpoint-down(x-small) {
      }
    }

    &__buttons {
      display: flex;
      column-gap: 16px;

      @include breakpoint-down(small) {
        margin-top: 16px;
      }

      @include breakpoint-down(x-small) {
        column-gap: 8px;
        justify-content: center;
      }
    }
  }
</style>

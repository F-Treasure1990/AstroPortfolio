---
import SiteContainerLayout from "@layouts/SiteContainerLayout.astro";
import PageSectionLayout from "@layouts/PageSectionLayout.astro";
import Landing from "@components/Organisms/Landing.astro";
import Info from "@components/Organisms/Info.astro";
import Quote from "@components/Organisms/Quote.astro";
import Projects from "@components/Organisms/Projects.astro";
import SubProjects from "@components/Organisms/SubProjects/SubProjects";
import Experience from "@components/Organisms/Experience.astro";
import Resources from "@components/Organisms/Resources.astro";
import Testimonials from "@components/Organisms/Testimonials.astro";
---

<SiteContainerLayout>
  <Landing />
  <Quote />
  <PageSectionLayout bgdark section="info">
    <Info />
  </PageSectionLayout>

  <PageSectionLayout section="projects">
    <Projects />
    <SubProjects client:load />
  </PageSectionLayout>

  <PageSectionLayout bgdark section="experience">
    <Experience />
  </PageSectionLayout>

  <PageSectionLayout section="resources">
    <Resources />
  </PageSectionLayout>

  <PageSectionLayout bgdark section="testimonials">
    <Testimonials />
  </PageSectionLayout>
</SiteContainerLayout>



---
const { bgdark, section }: { bgdark?: boolean; section?: string } = Astro.props;
---

<section class={`${bgdark && "dark-bg"}`} id={section}>
  <section class="section-content">
    <div class="section-content__container">
      <slot />
    </div>
  </section>
</section>

<style lang="scss">
  .dark-bg {
    background-color: var(--c-secondary);
  }

  .divider80 {
    margin: 80px 0;
  }

  .section-content {
    padding: 80px 0;
    margin: 0 16px;
    &__container {
      max-width: 1000px;
      margin: 0 auto;
    }
  }
</style>

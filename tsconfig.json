{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/Components/*"],
      "@layouts/*": ["src/Layouts/*"],
      "@styles/*": ["src/styles/*"],
      "@public/*": ["public/*"],
      "@data/*": ["src/data/*"], 
      "@store/*":["src/Store/*"],
      "@hooks/*":["src/Hooks/*"],
      "@images/*":["src/Images/*"]
    },
    "allowJs": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "astro/client"
    ],
    "importsNotUsedAsValues": "error",
    "jsx": "preserve"
  }
}
